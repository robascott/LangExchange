<h1>Title: <%= @note['title'] %></h1>

<p>Language: <%= @language['name'] %></p>

<p>Body: <%= @note['body'] %></p>

<p>Source: <%= @note['source'] %></p>

<%= link_to "Edit", edit_note_path(@note) %>

<%= link_to 'Back', user_path(@user) %>

<br><br>

<h3>Add new comment</h3>

<%= form_for(@comment, url: note_comments_path(@note), method: "post") do |f| %>

  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </div>

  <div class="actions">
    <%= f.submit "Save" %>
  </div>

<% end %>


<br>

<h3>Comments</h3>

<ul>

<% @comments.each do |comment| %>

	<li>

		<a id="comment-username" href="/users/<%= comment['user_id'] %>"><%= User.find(comment['user_id']).username %></a>
		<p id="comment-language">Native language: <%= get_language_name(comment['user_id']) %></p>
		<p><%= comment['text'] %></p>

	</li>


<% end %>

</ul>




