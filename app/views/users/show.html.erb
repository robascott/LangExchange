<h1>Users#show</h1>

<ul class="notes-container">

<% @notes.each do |note| %>

		<li id="note">
			<%= link_to "#{note['title']}", note_path(note), class: "note-title" %>

			<p id="note-body"><%= note['body'] %></p>
			
			<% if current_user %>
				<%= link_to 'Delete', user_note_path(@user, note), :method => :delete, class: "note-delete" %>
			<% end %>
		</li>


<% end %>


</ul>
